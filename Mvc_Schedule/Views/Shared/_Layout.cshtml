@using System.Web.Optimization
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="utf-8" />
        <!--[if IE]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
        <title>@ViewBag.Title / Расписание занятий АГПА</title>
        <link rel="icon" type="image/png" href="@Url.Content("~/Content/images/favicon.png")" />
        @Styles.Render("~/styles/main")
        @Scripts.Render("~/scripts/jquery")
    </head>
@{var isAuth = Request.IsAuthenticated;}
<body>
    <div id="wrapper">
        <header id="header">
            <div class="left">
                @*<a href="http://www.agpu.net/">АГПА</a>*@
                @*<a href="http://www.agpu.net/"><img src="@Url.Content("~/Content/images/agpa.png")" /></a>
                <a href="/">Расписание занятий<img alt="Расписание занятий" src="@Url.Content("~/Content/images/logo.png")" /></a>*@
                <a href="http://www.agpu.net/">
                    <img src="@Url.Content("~/Content/images/agpa.png")" /></a>
            </div>
            <div id="search" class="right">
                @using (Html.BeginForm("index", "schedule", FormMethod.Get))
                {
                    <input type="text" placeholder="Поиск..." required="required" name="search" />
                    <input type="submit" value="Найти" />
                }
            </div>

            <div class="middle">
                <p class="title">
                    <a href="/">Расписание занятий<img alt="Расписание занятий" src="@Url.Content("~/Content/images/logo.png")" /></a>
                    <span>Армавирская государственная педагогическая академия</span>
                </p>
            </div>
        </header>
        <div id="content">
            @Html.Partial("_AdminMenu", isAuth)
            @RenderBody()
        </div>
    </div>
    <footer id="footer">
        <p>
            <br />
            <span class="left" id="author">Автор: Рукавицын Андрей</span>
            <span class="right">@if (!isAuth) {@Html.ActionLink("Войти", "logon", "auth"); @(" |") } Все права и законы верны в меру разумного @(DateTime.Now.Year)г.</span>
        </p>
    </footer>
</body>
</html>
