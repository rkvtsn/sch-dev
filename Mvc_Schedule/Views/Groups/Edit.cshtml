@model Mvc_Schedule.Models.DataModels.Entities.StudGroup
<div id="page-title">Группа @Model.Name</div>
<link href="@Url.Content("/Content/validation.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="selector-block">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.GroupId)
        <div class="editor-label">@Html.Label("Name", "Название группы")</div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessage("Name", "Неверный ввод названия группы")
        </div>
        <div class="editor-label">@Html.LabelFor(model => model.FacultId, "Факультет")</div>
        <div class="editor-field">
            @Html.DropDownList("FacultId")
            @Html.ValidationMessageFor(model => model.FacultId)
        </div>
        <input type="submit" class="cell" value="Сохранить" />
    }
    @using (Html.BeginForm("Delete", "Groups", new { id = Model.GroupId }, FormMethod.Get))
    {
        <input type="submit" class="cell" value="Удалить" />
    }
</div>
