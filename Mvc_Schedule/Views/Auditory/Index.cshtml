@model Pager.PagerView<Mvc_Schedule.Models.DataModels.Entities.Auditory>
@Html.Partial("_ValidationStyles")
<h1 id="page-title">Список аудиторий</h1>
<div id="selector-block">
    @Html.Partial("_Pager", Model.Pager)
    <p>@Html.ActionLink("Добавить", "Create") / @Html.ActionLink("Добавить (пакетом)", "AddFromTxt")</p>
    <ul class="list">
        @foreach (var item in Model.Model)
        {
            <li>
                @Html.ActionLink("Удалить", "Delete", new { id = item.AuditoryId }, new { @class = "delete" })
                @Html.ActionLink(item.Number, "Edit", new { id = item.AuditoryId })
            </li>
        }
    </ul>
</div>
