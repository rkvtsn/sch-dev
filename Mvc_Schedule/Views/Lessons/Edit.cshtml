@model Mvc_Schedule.Models.DataModels.ModelViews.LessonsTime
<link href="@Url.Content("/Content/validation.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="page-title">Звонок: @Model.Hours:@Model.Minutes</div>

<div id="selector-block">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.LessonId)
    <input id="currentM" type="hidden" value="@Model.Time.Minute" />
	<input id="currentH" type="hidden" value="@Model.Time.Hour" />
	
    <div class="lesson-time">
		<div class="editor-label">
			@Html.Label("Время звонка:")
		</div>
		<select class="hours" id="Time_Hours" name="Hours">
		</select>
		:
		<select class="minutes" id="Lessons_Minutes" name="Minutes">
		</select>
	</div>

	<script src="@Url.Content("/Scripts/lessons.js")" type="text/javascript"></script>
	
	<p>
        <input type="submit" value="Сохранить" />
    </p>
}
</div>